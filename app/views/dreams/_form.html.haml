= form_for @dream do |f|
  -if @dream.errors.any?
    #error_explanation
      %h2= "#{pluralize(@dream.errors.count, "error")} prohibited this dream from being saved:"
      %ul
        - @dream.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :body
    = f.text_area :body
  .field
    = f.label :date
    = f.datetime_select :date
  .actions
    = f.submit 'Save'
