!!! 5
%html
  %head
    %title DreamMachine
  = stylesheet_link_tag :all
  = javascript_include_tag :defaults
  = csrf_meta_tag

  %body
    #content
      %a{ :href => "/" }
        %h1#logo Dream Machine

      -flash.each do |name, msg|
        = content_tag :div, msg, :id => "flash_#{msg}"

      =yield

      -if current_user
        %p
          =link_to "Log out", logout_path
          \|
          =link_to "Create User", signup_path
          \|
          = link_to 'Create Dream', new_dream_path
