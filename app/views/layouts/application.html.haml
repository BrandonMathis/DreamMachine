!!! 5
%html
  %head
    %title DreamMachine
  = stylesheet_link_tag :all
  = javascript_include_tag :defaults
  = csrf_meta_tag

  %body
    #content
      %a{ :href => "/" }
        %h1#logo Dream Machine

      -if current_user
        Logged in as #{current_user.name}
        %br=link_to "Log out", logout_path
      -else
        =link_to "Log in", login_path
        \|
        =link_to "Sign up", signup_path

      -flash.each do |name, msg|
        = content_tag :div, msg, :id => "flash_#{msg}"

      =yield
