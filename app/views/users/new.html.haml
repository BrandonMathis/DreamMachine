=form_for @user do |f|
  -if @user.errors.any?
    #error_explanation
      %h2 Form is invalid
      %ul
        -for message in @user.errors.full_messages
          %li= message

  %p.button=f.submit

  %p
    =f.label :email
    %br=f.text_field :email
  %p
    =f.label :password
    %br=f.text_field :password
  %p
    =f.label :password_confirmation
    %br=f.text_field :password_confirmation
